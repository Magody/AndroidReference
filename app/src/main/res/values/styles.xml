<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="fondoEstiloDoradoInternoAzulExterno">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/doradoP10_4C</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/azulP103_16U</item>
    </style>

    <style name="fondoEstiloAzulInternoBlancoExterno">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/azulP103_16U</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorBlanco</item>
    </style>


    <style name="letrasDoradas">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/doradoP10_4C</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="letrasAzules">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/azulP103_16U</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="tituloNegro">
        <item name="android:textColor">@color/colorNegro</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="textoEstandar">
        <item name="android:textColor">@color/colorNegro</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
